- var sidebar                = true;
- var theme_customizer       = true;
- var slick                  = true;
- var scrollbar              = true;
- var dropzone               = true;
include ../../components/mixin

doctype html
html(lang='en')
    include ../../components/header-files
    body
        // page-wrapper Start
        include ../../components/taptop
        include ../../components/loader
        #pageWrapper.page-wrapper.compact-wrapper 
            include ../../components/header/header
            // Page Body Start
            .page-body-wrapper 
                include ../../components/sidebar 
                .page-body
                    .container-fluid
                        .page-title
                            .row
                                .col-sm-6.col-12
                                    h2
                                        | Project Create
                                .col-sm-6.col-12
                                    ol.breadcrumb
                                        li.breadcrumb-item
                                            a(href='index.html')
                                                i.iconly-Home.icli.svg-color
                                        li.breadcrumb-item Project
                                        li.breadcrumb-item.active Project Create
                    // Container-fluid starts
                    .container-fluid
                        .row  
                            .col-sm-12
                                .card
                                    .card-body
                                        .form.theme-form.basic-form
                                            .row
                                                .col 
                                                    .mb-3
                                                        h5.f-w-600.mb-2 Project Title 
                                                        input.form-control(type='text', placeholder='Project name *')
                                            .row
                                                .col
                                                    .mb-3
                                                        h5.f-w-600.mb-2 Client name
                                                        input.form-control(type='text', placeholder='Name client or company name')
                                            .row
                                                .col-sm-4
                                                    .mb-3
                                                        h5.f-w-600.mb-2 Project Rate
                                                        input.form-control(type='text', placeholder='Enter project Rate')
                                                .col-sm-4
                                                    .mb-3
                                                        h5.f-w-600.mb-2 Project Type
                                                        select.form-select
                                                            option Hourly
                                                            option Fix price
                                                .col-sm-4
                                                    .mb-3
                                                        h5.f-w-600.mb-2 Priority
                                                        select.form-select
                                                            option Low
                                                            option Medium
                                                            option High
                                                            option Urgent
                                            .row
                                                .col-sm-4
                                                    .mb-3
                                                        h5.f-w-600.mb-2 Project Size  
                                                        select.form-select
                                                            option Small
                                                            option Medium
                                                            option Big
                                                .col-sm-4
                                                    .mb-3
                                                        h5.f-w-600.mb-2 Starting date
                                                        input.datepicker-here.form-control(type='text', data-language='en')
                                                .col-sm-4            
                                                    .mb-3
                                                        h5.f-w-600.mb-2 Ending date
                                                        input.datepicker-here.form-control(type='text', data-language='en')
                                            .row
                                                .col
                                                    .mb-3
                                                        h5.f-w-600.mb-2 Enter some Details
                                                        textarea#exampleFormControlTextarea4.form-control(rows='3')
                                            .row
                                                .col
                                                    .mb-3
                                                        h5.f-w-600.mb-2 Upload project file
                                                        form#singleFileUpload.dropzone(action='/upload.php')     
                                                            .dz-message.needsclick  
                                                                i.fa-solid.fa-cloud-arrow-up
                                                                h6 Drop files here or click to upload.       
                                                                span.note.needsclick
                                                                    | (This is just a demo dropzone. Selected files are
                                                                    strong not
                                                                    |  actually uploaded.)
                                            .row
                                                .col
                                                    div.text-end 
                                                        a.btn.btn-success.me-3(href="#") Add
                                                        a.btn.btn-danger(href="#") Cancel 
                include ../../components/footer
        include ../../components/footer-files