            .page-body-wrapper
                include ../../components/sidebar
                .page-body
                    .container-fluid
                        .page-title
                            .row
                                .col-sm-6.col-12
                                    h2
                                        | Base Inputs
                                .col-sm-6.col-12
                                    ol.breadcrumb
                                        li.breadcrumb-item
                                            a(href='index.html')
                                                i.iconly-Home.icli.svg-color
                                        li.breadcrumb-item Form Controls
                                        li.breadcrumb-item.active Base Inputs
                    // Container-fluid starts  
                    .container-fluid
                        .row
                            .col-md-6
                                .card
                                    .card-header.card-no-border.pb-0
