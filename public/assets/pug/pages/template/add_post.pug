- var sidebar                = true;
- var theme_customizer       = true;
- var slick                  = true;
- var scrollbar              = true;
- var dropzone               = true;
- var choice                 = true;
- var add_post               = true;
- var editors                = true;
- var feather                = true;
include ../../components/mixin
doctype html
html(lang='en')
    include ../../components/header-files
    body
        // page-wrapper Start
        include ../../components/taptop
        include ../../components/loader
        #pageWrapper.page-wrapper.compact-wrapper 
            include ../../components/header/header
            // Page Body Start
            .page-body-wrapper
                include ../../components/sidebar
                .page-body
                    .container-fluid
                        .page-title
                            .row
                                .col-sm-6.col-12 
                                    h2
                                        | Add Post
                                .col-sm-6.col-12
                                    ol.breadcrumb
                                        li.breadcrumb-item
                                            a(href='index.html')     
                                                i.iconly-Home.icli.svg-color
                                        li.breadcrumb-item Blog
                                        li.breadcrumb-item.active Add Post
                    // Container-fluid starts
                    .container-fluid
                      .row
                        .col-sm-12
                          .card
                            .card-header.card-no-border.pb-0
                              h3 Post Edit
                            .card-body.add-post
                              form.row.needs-validation(novalidate='')
                                .col-sm-12
                                  .mb-3
                                    label.mb-2(for='validationCustom01') Title:
                                    input#validationCustom01.form-control(type='text', placeholder='Post Title', required='')
                                    .valid-feedback
                                      | Looks good!
                                  .mb-3
                                    label.mb-2 Type:
                                    .m-checkbox-inline
                                      label(for='edo-ani')
                                        input#edo-ani.radio_animated(type='radio', name='rdo-ani', checked='')
                                        | Text
                                      label(for='edo-ani1')
                                        input#edo-ani1.radio_animated(type='radio', name='rdo-ani')
                                        | Image
                                      label(for='edo-ani2')
                                        input#edo-ani2.radio_animated(type='radio', name='rdo-ani', checked='')
                                        | Audio
                                      label(for='edo-ani3')
                                        input#edo-ani3.radio_animated(type='radio', name='rdo-ani')
                                        | Video
                                  .mb-3(data-test-hook='remove-button')
                                      label.col-form-label.mb-2(for='choices-remove-button') Category:
                                      select#choices-remove-button.form-control.col-sm-12(name='choices-remove-button' multiple='')
                                        option(value='') Select Your Name
                                        option(value='Choice 1') Lifestyle
                                        option(value='Choice 2') Travel
                                  .email-wrapper
                                    .theme-form
                                      .mb-3
                                        label.mb-2 Content:
                                        .toolbar-box
                                          #toolbar1
                                              button.ql-bold Bold 
                                              button.ql-italic Italic 
                                              button.ql-underline underline
                                              button.ql-list(value="ordered") List 
                                              button.ql-list(value="bullet") 
                                              button.ql-link
                                              button.ql-image
                                          #editor1
                              form#singleFileUpload.dropzone(action='/upload.php')
                                .m-0.dz-message.needsclick
                                  i.icon-cloud-up
                                  h6.mb-0 Drop files here or click to upload.
                              .btn-showcase.text-end.blog-btn
                                button.btn.btn-primary(type='submit') Post
                                input.btn.bg-light.font-dark(type='reset', value='Discard')
                    // Container-fluid Ends
                include ../../components/footer 
        include ../../components/footer-files