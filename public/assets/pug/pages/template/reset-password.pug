- var password_show        = true;
include ../../components/mixin
doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/taptop
    include ../../components/loader
    // page-wrapper Start
    .page-wrapper
      .container-fluid.p-0
        .row
          .col-12      
            .login-card.login-dark
              div
                div
                  a.logo(href="index.html")
                    img.img-fluid.for-light.m-auto(src="../assets/images/logo/logo1.png" alt="looginpage" )
                    img.img-fluid.for-dark(src="../assets/images/logo/logo-dark.png" alt="logo")
                .login-main 
                  form.theme-form
                    h2 Reset Your Password
                    .form-group
                      label.col-form-label New Password
                      .form-input.position-relative
                        input.form-control(type='password', name='login[password]', required='' placeholder="*********")
                        .show-hide
                          span.show
                    .form-group
                      label.col-form-label Retype Password
                      input.form-control(type='password', name='login[password]', required='' placeholder="*********")                       
                    .form-group.mb-0.checkbox-checked
                      .form-check.checkbox-solid-info
                          input#solid6.form-check-input(type='checkbox')
                          label.form-check-label(for='solid6') Remember password
                      button.btn.btn-primary.btn-block.w-100.mt-3(type='submit') Done                          
                    p.mt-4.mb-0 Don't have account?
                      a.ms-2(href="sign-up.html") Create Account
    // page-wrapper Ends
    include ../../components/footer-files